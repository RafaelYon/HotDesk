@model Domain.Issue

@{
    ViewData["Title"] = "Chamado #" + Model.Id;
}

<div class="row">
    <div class="col">
        <h2>
            Chamado #@Model.Id
        </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-10">
        <div class="row m-2">
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">
                            @Model.Title
                        </h4>
                        <h6 class="card-subtitle mb-2 text-muted">
                            <div class="row">
                                <div class="col-md-8">
                                    Criado por: <b>
                                        @Model.Owner.Name
                                    </b>
                                </div>
                                <div class="col-md-4 text-right">
                                    @Model.CreatedAt
                                </div>
                            </div>
                        </h6>
                        <p class="card-text">
                            @Html.DisplayFor(model => model.Description)
                        </p>
                    </div>
                </div>
            </div>
        </div>
        @foreach (IssuesComment comment in Model.GetCommentsOrdened())
        {
            <div class="row m-2">
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted">
                                <div class="row">
                                    <div class="col-md-4 offset-md-8 text-right">
                                        @comment.CreatedAt
                                    </div>
                                </div>
                            </h6>
                            <div class="row">
                                <div class="col-md-1 text-center">
                                    <img class="img-fluid img-thumbnail rounded" alt="@comment.CreatedBy.Name" src="data:image/png;base64, @comment.CreatedBy.Image">
                                </div>
                                <div class="col-md-11">
                                    <p class="card-text">
                                        @comment.Comment
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (ViewBag.CanComment)
        {
            <div class="row">
                <div class="col-md-10 offset-md-1">
                    <form asp-action="Comment">
                        <div class="form-group">
                            <label for="comment">Comentário</label>
                            <textarea class="form-control" name="comment" required></textarea>
                        </div>
                        <input type="hidden" value="@Model.Id" name="id" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        }
    </div>
    <div class="col-md-2">
        <div class="row text-center">
            <div class="col-md-12 p-2">
                <form method="post">
                    <input type="hidden" value="@Model.Id" name="id" />
                    <div class="btn-group">
                        @if (ViewBag.CanAssign)
                        {
                            <button class="btn btn-primary" type="submit" asp-action="Assign">Assumir</button>
                        }
                        @if (ViewBag.CanClose)
                        {
                            <button class="btn btn-secondary" type="submit" asp-action="Close">Encerrar</button>
                        }
                    </div>
                </form>
            </div>
        @if (ViewBag.CanRate)
        {
            <div class="col-md-12 p-2">
                <form asp-action="Rate">
                    <input type="hidden" value="@Model.Id" name="id" />
                    <div class="input-group">
                        <input type="number" step=".01" name="rate" class="form-control" min="0" max="5" required/>
                        <div class="input-group-append">
                            <button class="btn btn-info" type="submit">Avaliar</button>
                        </div>
                    </div>
                </form>
            </div>
        }
        </div>
    </div>
</div>