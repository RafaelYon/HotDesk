@model Domain.Group

@{
    ViewData["Title"] = "Novo Grupo";
}

<h3>Novo Grupo</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Default" /> @Html.DisplayNameFor(model => model.Default)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Permissões</label>
                <select class="form-control" multiple asp-items="@ViewBag.Permissions" name="permissions">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
